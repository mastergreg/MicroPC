START:
	LDA 2000H
	RAL
	CC DIAKOPH
	CALL INC_COUNT
	CALL MDELAY
	CALL SHOW_COUNTERS
	
	JMP START

SHOW_COUNTERS:
	MOV A,D
	RAL
	RAL
	RAL
	RAL
	ADD E
	CMA
	STA 3000H
	RET
