INC_COUNT:
	MOV A,E
	INR A
	ANI 0FH
	MOV E,A
	RET
INC_INTR:
	MOV A,D
	INR A
	ANI 0FH
	MOV D,A
	RET

DIAKOPH:
	PUSH D
	MVI A,0DH
	SIM
	EI
	RIM
	POP D
	RET
	
INTR_ROUTINE:
	PUSH B
	PUSH D
	CALL BEEP
	POP D
	POP B
	EI
	CALL INC_INTR
	RET
END